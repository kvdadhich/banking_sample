

<div class="panel-body">
<%= form_with(model: transaction_history, local: true, :html => {:class => "form-bordered", :multipart => true}) do |f| %>
  <% if transaction_history.errors.any? %>
    <div id="error_explanation" class="alert alert-error">
      <ul>
        <a href="#" data-dismiss="alert" class="close">Ã—</a>
        <% transaction_history.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <br>
  <% end %>
  <div class="form-group">
    <%= f.label :amount, "Amount" %>
    <%= f.text_field :amount, :class=>"form-control", :placeholder=>"Amount",id: :transaction_history_amount %>
  </div>
  <div class="form-group">
    <%= f.label :desc, "Description" %>
    <%= f.text_field :desc, :class=>"form-control", :placeholder=>"Description", id: :transaction_history_desc %>
    <%= f.hidden_field :trans_type, value: params[:trans_type], id: :transaction_history_trans_type %>
  </div>
  <div class="form-group">
    <a href="/transaction_histories"><button type="button" class="btn btn-default">Cancel</button></a>
    <button type="submit" name="commit" value="save" class="btn btn-primary">Save</button>
    
  </div><!-- /form-group -->
<% end %>
</div><!-- /panel-body -->
