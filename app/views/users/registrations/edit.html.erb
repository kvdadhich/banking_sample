<div class="content">
  <div class="content-bar">
    <div class="pull-right" role="group">
      <a data-toggle="modal" href="#" data-scripts="_includes/setups.js" data-target="#templateSetup" title="Template Setups" aria-label="template setups" class="btn btn-nofill btn-sm btn-default" href="#"><span class="icon-settings fa-lg text-muted"></span></a>
    </div>
    <ul class="breadcrumb breadcrumb-angle">
      <li><a href="/dashboard" aria-label="home"><i class="fa fa-home"></i></a></li>
      <li class="active">Profile</li>
    </ul>
  </div><!-- /.content-bar -->


  <div class="content-body">
    <div class="panel" data-fill-color="true">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="icon-note fa-fw"></i> Edit Profile</h3>
      </div><!-- /panel-heading -->

      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :class=>"form-horizontal form-bordered", :multipart => true }) do |f| %>
          <div id="error_explanation alert alert-danger">
            <%= devise_error_messages! %>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-md-4 mb-2x">
                <label for="input">First Name</label>
                <%= f.text_field :fname, :class=>"form-control", :placeholder=>"First Name" %>
              </div><!-- first name field -->

              <div class="col-md-4 mb-2x">
                <label for="input">Last Name</label>
                <%= f.text_field :lname, :class=>"form-control", :placeholder=>"Last Name" %>
              </div><!-- last name field -->
            </div>
          </div><!-- /form-group -->
          <div class="form-group">
            <div class="row">        
              <div class="col-md-6 mb-2x">
                <label for="input">Address</label>
                <%= f.text_field :address, :class=>"form-control", :placeholder=>"Address" %>
              </div><!-- address field -->

              <div class="col-md-6 mb-2x">
                <label for="input">Mobile Number</label>
                <%= f.text_field :mobile_no, :class=>"form-control", :placeholder=>"Mobile Number", autocomplete: "off" %>
              </div><!-- MObile Number field -->
            </div>
          </div><!-- /form-group -->
          <div class="form-group">
            <div class="row">        
              <div class="col-md-6 mb-2x">
                <label for="input">Email</label>
                <%= f.text_field :email, :class=>"form-control", :placeholder=>"Email" %>
              </div><!-- email field -->

              <div class="col-md-6 mb-2x">
                <label for="input">Current Password</label>
                <%= f.password_field :current_password, :class=>"form-control", :placeholder=>"Current Password", autocomplete: "off" %>
                <span id="helpBlock" class="help-block">we need your current password to confirm your changes.</span>
              </div><!-- Current password field -->
            </div>
          </div><!-- /form-group -->

          <div class="form-group">
            <div class="row">        
              <div class="col-md-6 mb-2x">
                <label for="input">Password</label>
                <%= f.password_field :password, :class=>"form-control", :placeholder=>"Password", autocomplete: "off" %>
                <span id="helpBlock" class="help-block">leave blank if you don't want to change it.</span>
              </div><!-- password field -->

              <div class="col-md-6 mb-2x">
                <label for="input">Confirm Password</label>
                <%= f.password_field :password_confirmation, :class=>"form-control", :placeholder=>"Confirm Password", autocomplete: "off" %>
              </div><!-- Confirm password field -->
            </div>
          </div><!-- /form-group -->

          <div class="form-group">
            <button type="submit" class="btn btn-default">Save</button>
          </div><!-- /form-group -->
        <% end %><!-- /form -->
      </div><!-- /panel-body -->
    </div><!-- /panel-basicform -->
  </div>
</div>


  
